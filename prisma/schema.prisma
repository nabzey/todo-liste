generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Etat {
  EN_COURS
  TERMINER
  A_FAIRE
}
model Users {
  id Int @id @default(autoincrement())
  name String 
  email String  @unique
  login String @unique
  password String
  taches Taches []
  autoriseTache Association[] 
}

model Taches {
  id          Int    @id @default(autoincrement())
  titre       String
  description String
  statut Etat @default(EN_COURS)
  usersid  Int
  users Users @relation(fields: [usersid],references: [id])
  autoriseUser Association[] 
  photoUrl String?
  audioUrl String?
}

enum Choix { 
  SUPPRIMER
  AJOUTER
  MODIFIER
}

model Association{
  id Int @id @default(autoincrement())

  usersId Int 
  users Users @relation(fields: [usersId],references: [id])

  tacheId Int 
  tache Taches @relation(fields: [tacheId],references: [id])
  permission Choix
}

